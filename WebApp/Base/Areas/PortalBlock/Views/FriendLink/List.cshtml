<div class="mini-toolbar gw-grid-toolbar">
    <table>
        <tr>
            <td style="width: 100%;">
                <a class="mini-button" iconcls="icon-add" onclick="add({ height: '480px',width:'720px',title:'添加友情链接',onDestroy:closeWindows});" plain="true">
                    增加</a> <a class="mini-button" iconcls="icon-edit" onclick="edit({ title:'编辑友情链接', height:'480px',width:'720px',onDestroy:closeWindows});"
                        plain="true">编辑</a> <a class="mini-button" iconcls="icon-remove" onclick="del()"
                            plain="true">删除</a>
            </td>
            <td class="gw-toolbar-right">
                <input class="mini-buttonedit searchbox" id="key" emptytext="请输入名称或链接地址" style="width: 200px;"
                    onenter="quickSearch('Name,Url');" onbuttonclick="quickSearch('Name,Url');" />
                <a class="mini-button" onclick="showWindow('queryWindow')" iconcls="icon-find" plain="true">
                    详细查询</a>
            </td>
        </tr>
    </table>
</div>
<div class="mini-fit">
    <div id="dataGrid" class="mini-datagrid" idfield="ID" url="GetList" style="width: 100%;
        height: 100%;"  allowMoveColumn="false">
        <div property="columns">
            <div type="checkcolumn">
            </div>
            <div field="Name" headeralign="center" align="left" width="*" allowsort="true">
                名称</div>
           <div field="Url" headeralign="center" align="left" width="200" allowsort="true">
                链接地址</div>
            <div field="DeptName" headeralign="center" align="left" width="120" allowsort="true">
                相关部门</div>
            <div field="UserName" width="120" headeralign="center" allowsort="true" align="left">
                相关人员</div>
            <div field="SortIndex" width="40" headeralign="center" allowsort="true" align="right">
                排序</div>
      </div>
    </div>
</div>
<div id="queryWindow" class="mini-window" title="详细查询" style="width: 690px; height: 180px;"
    showmodal="true" allowresize="false" allowdrag="true">
    <div class="queryDiv">
        <form id="queryForm" method="post">
        <table>
            <tr>
                <td width="15%" align="center">
                    名称
                </td>
                <td width="35%" align="left">
                    <input name="$LK$Name" style="width: 75%;" class="mini-textbox" />
                </td>
                <td width="15%" align="center">
                    链接地址
                </td>
                <td width="35%" align="left">
                    <input name="$LK$Url" style="width: 75%;" class="mini-textbox" />
                </td>
            </tr>
            <tr>
                <td align="center">
                    相关部门
                </td>
                <td align="left">
                    <input name="$LK$DeptName" style="width: 75%;" class="mini-textbox" />
                </td>
                <td align="center">
                    相关人员
                </td>
                <td align="left">
                    <input name="$LK$UserName" style="width: 75%;" class="mini-textbox" />
                </td>
            </tr>
        </table>
        </form>
        <div>
            <a class="mini-button" onclick="search()" iconcls="icon-find"  style="margin-right: 20px;">
                查询</a> <a class="mini-button" onclick="clearQueryForm('queryForm')"  iconcls="icon-undo">
                    清空</a>
        </div>
    </div>
</div>
<script type="text/javascript">
    addGridLink("dataGrid", "Name", "Edit?ID={ID}&FuncType=View", { height: "480px", width: '720', title: "查看友情链接", refresh: false });
    listConfig.title = "友情链接";
</script>
<script type="text/javascript">
    function closeWindows() {
        mini.get("dataGrid").load();
    }

</script>
