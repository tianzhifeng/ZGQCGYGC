<div class="mini-toolbar" id="btnDiv" style="width: 100%; position: fixed; top: 0; left: 0; z-index: 100;">
    <table>
        <tr>
            <td>
                <a class="mini-button" plain="true" iconcls="icon-save" onclick="returnForm();">确定</a>
            </td>
            <td id="btnRight">
            </td>
        </tr>
    </table>
</div>
<form id="dataForm" method="post" autogetdata="false" style="top: 30px; position: relative;">
<div class="formDiv">
    <fieldset>
        <legend>基本属性</legend>
        <div>
            <table>
                <tr class="hideRow">
                    <td width="50%">
                    </td>
                    <td width="50%">
                    </td>
                </tr>
                <tr>
                    <td>
                        可移动表头列：
                    </td>
                    <td>
                        <input name="allowMove" class="mini-combobox" value="false" data="yesNo" style="width: 100%" />
                    </td>
                </tr>
                <tr>
                    <td>
                        可调节列宽：
                    </td>
                    <td>
                        <input name="allowResize" class="mini-combobox" value="true" data="yesNo" style="width: 100%" />
                    </td>
                </tr>
                <tr>
                    <td>
                        数据类型：
                    </td>
                    <td>
                        <input name="dataType" class="mini-combobox" value="true" data="dataType" style="width: 100%" />
                    </td>
                </tr>
                <tr>
                    <td>
                        数据格式：
                    </td>
                    <td>
                        <input name="dateFormat" class="mini-textbox" style="width: 100%" value=""/>
                    </td>
                </tr>
                <tr>
                    <td>
                        货币单位：
                    </td>
                    <td>
                        <input name="currencyUnit" class="mini-textbox" style="width: 100%" />
                    </td>
                </tr>
                <tr>
                    <td>
                        数字格式：
                    </td>
                    <td>
                        <input name="numberFormat" class="mini-textbox" style="width: 100%" />
                    </td>
                </tr>
                <tr>
                    <td>
                        小数位数：
                    </td>
                    <td>
                        <input name="decimalPlaces" class="mini-textbox" value="2" style="width: 100%" />
                    </td>
                </tr>
            </table>
        </div>
    </fieldset>
    <fieldset>
        <legend>事件属性</legend>
        <div>
            <table>
                <tr class="hideRow">
                    <td width="50%">
                    </td>
                    <td width="50%">
                    </td>
                </tr>
                <tr>
                    <td>
                        汇总格渲染：
                    </td>
                    <td>
                        <input name="summaryRenderer" class="mini-textbox" style="width: 100%" />
                    </td>
                </tr>
            </table>
        </div>
    </fieldset>
</div>
</form>
<script type="text/javascript">
    var yesNo = [{ "value": "true", "text": "是" }, { "value": "false", "text": "否"}];
    var vType = [{ "value": "email", "text": "邮件" }, { "value": "int", "text": "整型" }, { "value": "float", "text": "浮点型"}];

    var dataType = [{ "value": "string", "text": "string" }, { "value": "int", "text": "int" }, { "value": "float", "text": "float" }, { "value": "date", "text": "date" }, { "value": "boolean", "text": "boolean" }, { "value": "currency", "text": "currency"}];
    function setData(data) {
        if (data) {
            var form = new mini.Form("dataForm");
            form.setData(mini.decode(data));
            form.setChanged(false);
        }
    }
</script>
