<div class="mini-fit">
    <div id="dataGrid" class="mini-datagrid" idfield="ID" url="GetApplyList" style="width: 100%;
        height: 100%;" allowmovecolumn="false" sortField="ID" sortOrder="desc">
        <div property="columns">
            <div type="indexcolumn">
                序号
            </div>
            <div field="Title" width="180" headeralign="center" allowsort="true" align="left" dateformat="yyyy-MM-dd">
                会议标题</div>
            <div field="RoomAddress" headeralign="center" width="150" allowsort="true" align="left">
                会议地点</div>
            <div field="MeetingStart" width="140" headeralign="center" allowsort="true" align="center" dateformat="yyyy-MM-dd HH:mm:ss">
                会议开始时间</div>
            <div field="MeetingEnd" width="140" headeralign="center" allowsort="true" align="center" dateformat="yyyy-MM-dd HH:mm:ss">
                会议结束时间</div>
            <div field="State" width="80" headeralign="center" allowsort="true" align="center">
                预定状态</div>
            <div field="ApplyUserName" width="80" headeralign="center" allowsort="true" align="center">
                申请人</div>
            <div field="ApplyDate" width="90" headeralign="center" allowsort="true" align="center" dateformat="yyyy-MM-dd">
                申请时间</div>
        </div>
    </div>
</div>

<script type="text/javascript">
    @Html.GetEnum("FlowState")
    @Html.GetEnum("OA.State")

    //为Grid枚举列指定枚举定义
    addGridEnum("dataGrid", "State", "State");
    addGridEnum("dataGrid", "FlowState", "FlowState");
    //注册Grid链接列
    addGridLink('dataGrid', 'Title', '/MvcConfig/UI/Form/PageView?TmplCode=Flow_Conference_ConferenceApply&ID={ID}', { funcType: 'view', width: 900, height: '90%' });
</script>
