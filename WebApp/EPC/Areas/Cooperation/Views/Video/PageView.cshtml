@{
    ViewBag.Title = "PageView";
}
<script src="~/Scripts/Main/js/partial.js" type="text/javascript"></script>

<form id="dataForm" method="post" align="center" autogetdata="true">
    <input name="ID" class="mini-hidden" />

    <input name="WeatherType" class="mini-hidden" />
    <input name="Temperature" class="mini-hidden" />
    <input name="ProjectID" class="mini-hidden" />
    <input name="CreateUser" class="mini-hidden" />
    <input name="CreateUserID" class="mini-hidden" />
    <input name="EngineeringInfoID" class="mini-hidden" />
    <div class="formDiv" style="background-color: #fff;padding-top:55px">
        <script type='text/javascript'>
        </script><h1 align="center">
            现场影像
        </h1>
        <fieldset class="formDiv">
            <legend>基本信息</legend>
            <table class="ke-zeroborder" style="width:100%;" cellpadding="2" border="0">
                <tbody>
                    <tr>
                        <td style="width:15%;">
                            <br />
                        </td>
                        <td style="width:35%;">
                            <br />
                        </td>
                        <td style="width:15%;">
                            <br />
                        </td>
                        <td style="width:35%;">
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <td style="width:15%;">
                            主题
                        </td>
                        <td style="width:35%;" colspan="3">
                            <input name='Title' class='mini-textbox' required='true' allowinput='true' style='width:100%;' maxlength='200' />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            类别
                        </td>
                        <td>
                            <input name='ProjectVideoType' class='mini-combobox' required='true' allowinput='false' multiselect='false' shownullitem='true' valuefromselect='true' style='width:100%;' data='VideoType' />
                        </td>
                        <td style="padding-left:20px;">
                            标段
                        </td>
                        <td>
                            <input name='Section' class='mini-combobox' required='true' allowinput='false' multiselect='false' shownullitem='true' valuefromselect='true' style='width:100%;' data='SectionData' />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            创建人
                        </td>
                        <td>
                            <input name='CreateUserName' class='mini-textbox' style='width:100%' maxlength='200' enabled='false' /><br />
                        </td>
                        <td style="padding-left:20px;">
                            创建时间<br />
                        </td>
                        <td>
                            <input name='CreateDate' class='mini-datepicker' required='false' allowinput='true' format='yyyy-MM-dd' style='width:100%;' enabled='false' /><br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            是否发布外网
                        </td>
                        <td>
                            <input name='IsPublish' class='mini-combobox' required='true' allowinput='false' multiselect='false' shownullitem='true' valuefromselect='true' style='width:100%;' data='TrueOrFalse' />
                        </td>
                        <td style="padding-left:20px;"></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                            备注
                        </td>
                        <td colspan="3">
                            <input name='Remark' class='mini-textarea' style='width:100%' maxlength='500' />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            影像文件<br />
                        </td>
                        <td colspan="3">
                            <input name='FileIDs' class='mini-multifile' filetype='.jpg,.png,.gif,.bmp' required='true' style='width:100%' /><br />
                        </td>
                    </tr>
                </tbody>
            </table>
        </fieldset>
    </div>
</form>
<div class="mini-toolbar" id="btnDiv" style="width: 100%; position: fixed; top: 0;
        left: 0; z-index: 100;">
    <table>
        <tr>
            <td>
                <a id="btnSave" class="mini-button" plain="true" iconcls="icon-save" onclick="save();">
                    保存
                </a> <a id="btnCancel" class="mini-button" plain="true" iconcls="icon-cancel" onclick="closeWindow()">
                    取消
                </a>
            </td>
            <td id="btnRight"></td>
        </tr>
    </table>
</div>
<script>
    @Html.GetEnum("EPC.VideoType");
    @Html.GetEnum("System.TrueOrFalse")
    var SectionData = @Html.Raw(ViewBag.SectionData);
</script>
