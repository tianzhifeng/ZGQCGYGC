@{
    ViewBag.Title = "List";
}

<div class="mini-toolbar" style="padding: 2px; border-bottom: 0;">
    <table style="width: 100%;">
        <tr>
            <td style="width: 100%;">
                <a class="mini-button" iconcls="icon-add" onclick="add({width:600,height:350});" plain="true">增加</a>
                <a class="mini-button" iconcls="icon-edit" onclick="edit({ width: 600, height: 350 });" plain="true">编辑</a>
                <a class="mini-button" iconcls="icon-remove" onclick="del()" plain="true">删除</a>
            </td>
            <td style="white-space: nowrap;">
                <input class="mini-buttonedit searchbox" id="key" emptytext="请输入名称或编号" style="width: 200px;" onenter="quickSearch('Name,Code');"
                       onbuttonclick="quickSearch('Name,Code');" />
                <a class="mini-button" onclick="showWindow('queryWindow')" iconcls="icon-find" plain="true">详细查询</a>
            </td>
        </tr>
    </table>
</div>
<div class="mini-fit" style="height: 100px;">
    <div id="dataGrid" url="GetList" class="mini-datagrid" style="width: 100%; height: 100%;" idfield="ID" multiselect="true">
        <div property="columns">
            <div type="checkcolumn">
            </div>
            <div field="Modify" width="70" headeralign="center" align="center" allowsort="true">
                编辑
            </div>
            <div field="Name" width="100" headeralign="center" align="center" allowsort="true">
                名称
            </div>
            <div field="Code" width="100" headeralign="center" align="center" allowsort="true">
                编号
            </div>
            <div field="BelongMode" width="220" headeralign="center" allowsort="true">
                应用管理模式
            </div>
            <div field="Remark" headeralign="center" width="*" allowsort="true" >
                备注
            </div>
            <div field="ModifyUser" headeralign="center" width="120" allowsort="true" align="center">
                最后修改人
            </div>
            <div field="ModifyDate" width="150" headeralign="center" dateformat="yyyy-MM-dd" allowsort="true" align="center">
                最后修改日期
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    @Html.GetEnum("Base.Mode")
</script>

<script type="text/javascript">
    addGridEnum("dataGrid", "BelongMode", "Mode");
    addGridLink("dataGrid", "Modify", "Config?CBSDefineID={ID}", { linkText: "配置", height: "90%", width: "80%" });

</script>

