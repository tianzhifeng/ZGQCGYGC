@{
    ViewBag.Title = "Edit";
}

<div id="formlayout" class="mini-layout" style="width: 100%; height: 100%;">
    <div region="north" height="32" showspliticon="false" showheader="false" allowresize="false" splitsize="0"
         style="border: 0;">
        <div class="mini-toolbar" style="padding: 0px; border-left: 0; border-top: 0; border-right: 0;">
            <table style="width: 100%;">
                <tr>
                    <td style="width: 100%;">
                        <a class="mini-button" iconcls="icon-save" onclick="save();" plain="true">保存</a>
                        <a class="mini-button" iconcls="icon-cancel" onclick="closeWindow()" plain="true">取消</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div title="center" region="center" style="border: 0;">
        <form id="dataForm" method="post">
            <input name="ID" class="mini-hidden" />
            <input name="ParentID" class="mini-hidden" />
            <input name="ModeID" class="mini-hidden" />
            <div class="formDiv">
                <fieldset>
                    <legend>基本信息</legend>
                    <div>
                        <table>
                            <tr class="hideRow">
                                <td width="15%"></td>
                                <td width="35%"></td>
                                <td width="15%"></td>
                                <td width="35%"></td>
                            </tr>
                            <tr>
                                <td>
                                    名称
                                </td>
                                <td style="padding-right:40px;">
                                    <input name="Name" class="mini-textbox" style="width: 100%;" required="true" />
                                </td>
                                <td>
                                    编号
                                </td>
                                <td style="padding-right:40px;">
                                    <input name="Code" class="mini-textbox" style="width: 100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    节点类型
                                </td>
                                <td style="padding-right:40px;">
                                    <input name="NodeType" class="mini-combobox" data="QBSType" style="width: 100%;"
                                           textfield="text" valuefield="value" allowinput="false" required="true" />

                                </td>
                                <td>排序</td>
                                <td style="padding-right:40px;">
                                    <input name="SortIndex" style="width: 100%" class="mini-textbox" vtype="maxLength:50"
                                           required="true" />
                                </td>
                            </tr>
                            <tr></tr>
                            <tr>
                                <td>允许导入WBS</td>
                                <td style="padding-right:40px;">
                                    <input name="CanImportWBS" class="mini-combobox" style="width: 100%;" textfield="text" valuefield="value"
                                           data="TrueOrFalse" allowinput="false" required="true" />
                                </td>
                                <td>是否枚举节点</td>
                                <td style="padding-right:40px;">
                                    <input name="IsEnum" class="mini-combobox" style="width: 100%;" textfield="text" valuefield="value"
                                           data="TrueOrFalse" allowinput="false" required="true" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </fieldset>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    @Html.GetEnum("Base.QBSType")
</script>
<script type="text/javascript">
    var TrueOrFalse = [{ value: true, text: "是" }, { value: false, text: "否" }];
    var parentID = getQueryString("PARENTID");
</script>
