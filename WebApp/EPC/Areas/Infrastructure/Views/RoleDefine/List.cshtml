@{
    ViewBag.Title = "List";
}

<div class="mini-toolbar" style="padding: 2px; border-bottom: 0;">
    <table style="width: 100%;">
        <tr>
            <td style="width: 100%;">
                <a class="mini-button" iconcls="icon-add" onclick="add({width:600,height:300});" plain="true">增加</a>
                <a class="mini-button" iconcls="icon-edit" onclick="edit({width:600,height:300});" plain="true">编辑</a>
                <a class="mini-button" iconcls="icon-remove" onclick="del()" plain="true">删除</a>
            </td>
            <td style="white-space: nowrap;">
                <input class="mini-buttonedit searchbox" id="key" emptytext="请输入名称或编号" style="width: 200px;" onenter="quickSearch('RoleName,RoleCode');"
                       onbuttonclick="quickSearch('RoleName,RoleCode');" />
            </td>
        </tr>
    </table>
</div>
<div class="mini-fit" style="height: 100px;">
    <div id="dataGrid" url="GetList" class="mini-datagrid" style="width: 100%; height: 100%;" idfield="ID" multiselect="true">
        <div property="columns">
            <div type="checkcolumn">
            </div>
            <div field="RoleName" width="150" headeralign="center" align="center">
                名称
            </div>
            <div field="RoleCode" width="150" headeralign="center" align="center">
                编号
            </div>
            <div field="RoleType" width="100" headeralign="center" align="center">
                类型
            </div>
            <div field="SortIndex" width="120" headeralign="center" align="right">
                序号
            </div>
            <div field="Remark" headeralign="center" width="*" allowsort="true" align="center">
                描述
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    addGridEnum("dataGrid", "FieldName", "EnumKey");
    addGridLink("dataGrid", "FieldName", "URL?ID={ID}", { funcType: "view", height: 600, width: 800 });
    addGridButton("dataGrid", "FieldName", { onButtonClick: function (row) { } });
</script>

