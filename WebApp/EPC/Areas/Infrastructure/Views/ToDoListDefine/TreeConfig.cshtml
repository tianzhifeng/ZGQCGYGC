                <fieldset class="formDiv" style="display:none" id="ActionInfo">
                    <legend>执行脚本</legend>
                    <table class="ke-zeroborder" style="width:100%;" cellpadding="2" border="0">
                        <tr class="hideRow">
                            <td width="15%"></td>
                            <td width="35%"></td>
                            <td width="15%"></td>
                            <td width="35%"></td>
                        </tr>
                        <tr>
                            <td colspan="4"><textarea id="Script" name="editor" style="height:300px;"></textarea></td>
