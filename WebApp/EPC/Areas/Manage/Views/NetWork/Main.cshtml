
@section scripts{
    <script src="@Url.Content("/EPC/Scripts/NetWork/jquery-latest.js")" type="text/javascript"></script>
    <script src="@Url.Content("/EPC/Scripts/NetWork/saveSvgAsPng.js")" type="text/javascript"></script>
    <script src="@Url.Content("/EPC/Scripts/NetWork/calc.js")" type="text/javascript"></script>
    <script src="@Url.Content("/EPC/Scripts/NetWork/netWork.js")" type="text/javascript"></script>
}
<div class="mini-fit" id="svg-wrap">
        <svg xmlns="http://www.w3.org/2000/svg" id="main" style="margin-left: 10px;margin-right: 10px;/*border-left-color: #C0C0C0;border-left-style: solid;border-left-width: 1px;border-right-color: #C0C0C0;border-right-style: solid;border-right-width: 1px;border-bottom-color: #C0C0C0;border-bottom-style: solid;border-bottom-width: 1px;*/">
            <foreignobject x="0" y="0" width="100%" height="100%">
                <div xmlns='http://www.w3.org/1999/xhtml'>
                    <div id="time">
                        <div id="title" style="height: 30px;text-align: center;font-family: 'Microsoft YaHei';font-size: 16px;">@Html.Raw(ViewBag.title)</div>
                        <table id="table1"style="border-collapse: collapse;font-family: Microsoft YaHei;font-weight: bold;color: #6D6D6D;" border="0" cellpadding="0" cellspacing="0">
                            <tr id="topTime" style="border:1px solid #C0C0C0;height: 30px;text-align: center;"></tr>
                            <tr id="botTime" style="border:1px solid #C0C0C0;height: 30px;text-align: center;"></tr>
                        </table>
                    </div>
                </div>
            </foreignobject>
            <svg xmlns="http://www.w3.org/2000/svg" id="svg" height="100%" x="0" y="91">
                <defs>
                    <marker id="idArrow" viewBox="0 0 20 20" refX="0" refY="10" markerUnits="strokeWidth" markerWidth="8" markerHeight="10" orient="auto">
                        <path d="M 0 0 L 20 10 L0 20 z" fill="purple" stroke="#6D6D6D" />
                    </marker>
                </defs>
            </svg>
            <foreignobject id="bottomTime" x="0" width="100%" height="100%">
                <div xmlns='http://www.w3.org/1999/xhtml'>
                    <div id="time2">
                        <table id="table2"style="border-collapse: collapse;font-family: Microsoft YaHei;font-weight: bold;color: #6D6D6D;" border="0" cellpadding="0" cellspacing="0">
                            <tr id="botTime2" style="border:1px solid #C0C0C0;height: 30px;text-align: center;"></tr>
                            <tr id="topTime2" style="border:1px solid #C0C0C0;height: 30px;text-align: center;"></tr>
                        </table>
                    </div>
                </div>
            </foreignobject>
        </svg>
</div>

<style type="text/css">
    body {
        margin: 0;
        text-align: left;
        font-size: 12px;
        line-height: 1.5;
        color: black;
        font-family: 'Microsoft YaHei';
    }


    #splitter {
        overflow-x: scroll;
        overflow-y: scroll;
    }
</style>
