    ViewBag.Title = "MainIndex";
    Layout = "";
}
<html>
<head>
    <meta charset="UTF-8">
    <title>工程空间</title>
    <script type="text/javascript">
        //GetBasicInfo参数分别为：当前用户信息、按钮字段权限、动态文件服务器地址和当前流程环节
