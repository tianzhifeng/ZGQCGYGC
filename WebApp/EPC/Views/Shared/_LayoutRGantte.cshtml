<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script type="text/javascript">
        //GetBasicInfo参数分别为：当前用户信息、按钮字段权限、动态文件服务器地址和当前流程环节
        //请根据具体需要调整true或false
        @Html.GetBasicInfo(true, true, false, true)
    </script>
    <script src="@Url.Content("/EPC/Scripts/PlusGantt/jquery-1.8.1.min.js")" typ=typ type="text/javascript"></script>
    <script src="@Url.Content("/EPC/Scripts/PlusGantt/miniui/miniui.js")" typ=typ type="text/javascript"></script>
    <script src="@Url.Content("/EPC/Scripts/PlusGantt/miniui/locale/zh_CN.js")" typ=typ type="text/javascript"></script>
    <script src="@Url.Content("/CommonWebResource/CoreLib/MiniUI/baseMiniuiExt.js")" type="text/javascript"></script>
    <script src="@Url.Content("/CommonWebResource/CoreLib/MiniUI/customCtrl.js")" type="text/javascript"></script>
    <script src="@Url.Content("/MvcConfig/miniuiExt.js")" type="text/javascript"></script>
    <script src="@Url.Content("/EPC/Scripts/PlusGantt/plusgantt/RGanttSchedule.js")" typ=typ type="text/javascript"></script>
    <script src="@Url.Content("/CommonWebResource/Theme/" + @Html.GetGlobalColor() + "/MiniCssInc.js")" type="text/javascript"></script>
    <link href="/EPC/Scripts/PlusGantt/miniui/themes/default/miniui.css" rel="stylesheet" />
    <link href="/EPC/Scripts/PlusGantt/miniui/themes/gray/skin.css" rel="stylesheet" />
   
    <style type="text/css">
        body {
            background-color: #ffffff;
        }

        .mini-button .mini-button-icon {
            padding-left: 5px;
            background-position: 6px 50%;
            background-repeat: no-repeat;
        }

        .mini-buttonedit {
            height: 31px;
        }

        .mini-buttonedit-border {
            padding-right: 0px;
        }

        .mini-textbox-border {
            border-radius: 5px;
            height: 29px;
        }

        .mini-textbox {
            height: 31px;
            margin: 0px 0;
        }

        .mini-textbox-input {
            height: 29px;
            line-height: 20px;
        }
    </style>
</head>
<body>
    @{
        if (Request["ShowShadow"] == "False")
        {

        }
        else
        {
            <div id="loadShadow" style="height: 100%; width: 100%; position: absolute; background-color: #ebedf2; z-index: 9999; ">
                <img style="margin-top: 25%; margin-left: 50%;" src="/CommonWebResource/Theme/Default/MiniUI/images/_pager/loading.gif" alt="" />
            </div>
        }
    }

    @RenderBody()
    @RenderSection("scripts", required: false)
    <script type="text/javascript">

        preInit();
        $("#loadShadow").hide();

    </script>
</body>
</html>
