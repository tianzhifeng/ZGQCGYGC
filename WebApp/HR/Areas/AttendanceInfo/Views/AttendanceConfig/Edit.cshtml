<div class="mini-layout" style="height: 100%; width: 100%;">
    <div showcollapsebutton="true">
        <div class="mini-toolbar" id="btnDiv">
            <table>
                <tr>
                    <td>
                        <a class="mini-button" id="btnSave" plain="true" iconcls="icon-save" onclick="save({closeWindow:false});">保存</a>
                    </td>
                    <td id="btnRight"></td>
                </tr>
            </table>
        </div>
        <form id="dataForm" method="post">
            <input name="ID" class="mini-hidden" />
            <div class="basediv">
                <table cellpadding="0" cellspacing="0" align="center" style="width: 98%;">
                    <tr align="center">
                        <td style="font-size: 16pt; font-weight: bold; line-height: 35px; text-align: center;">
                            考勤参数设置
                        </td>
                    </tr>
                </table>
                <table width="100%">
                    <tr>
                        <td width="15%">
                            规定上班时间
                        </td>
                        <td width="35%">
                            <input name="AmCheckDate" class="mini-timespinner" style="width: 100%" format="HH:mm" required="true" />
                        </td>
                        <td width="15%" style="padding-left: 1cm">
                            迟到时间
                        </td>
                        <td width="35%">
                            <input name="AmLateCheckDate" class="mini-timespinner" style="width: 100%" format="HH:mm" required="true" />
                        </td>
                    </tr>
                    <tr>
                        <td width="15%">
                            规定下班时间
                        </td>
                        <td width="35%">
                            <input name="PmCheckDate" class="mini-timespinner" style="width: 100%" format="HH:mm" required="true" />
                        </td>
                        <td width="15%" style="padding-left: 1cm">
                            早退时间
                        </td>
                        <td width="35%">
                            <input name="PmEarlyDate" class="mini-timespinner" style="width: 100%" format="HH:mm" required="true" />
                        </td>
                    </tr>
                    <tr>
                        <td width="15%">
                            每天开始时间
                        </td>
                        <td width="35%">
                            <input name="PmEndDate" class="mini-timespinner" style="width: 100%" format="HH:mm" required="true" />
                        </td>
                        <td width="15%" style="padding-left: 1cm"></td>
                        <td width="35%"></td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            说明：此时间表示每天以此开始的24小时属于这一天
                        </td>
                    </tr>
                    <tr>
                        <td width="15%">
                            考勤说明
                        </td>
                        <td colspan="3">
                            <input name="Description" class="mini-textarea" required="true" maxlength='500' style='width:100%;height:100px;' />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            <div name="UseAttendanceInfo" class="mini-checkbox" required="true" text="是否根据考勤登记生成考勤月报（如果不勾选，生成的考勤月报数据将都是“出勤”）"></div>
                        </td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>
