@{
    ViewBag.Title = "MultiSelector";
}
<div class="mini-toolbar" style="padding: 2px; border-bottom: 0;">
    <table style="width: 100%;">
        <tr>
            <td style="width: 100%;">
                <a class="mini-button" iconcls="icon-ok" onclick="selectorPost();" plain="true">选择</a>
            </td>
            <td style="white-space: nowrap;">
                <input class="mini-buttonedit searchbox" id="key" emptytext="请输入岗位名称或者编号" style="width: 200px;"
                    onenter="quickSearch('Code,Name');" onbuttonclick="quickSearch('Code,Name');" />
            </td>
        </tr>
    </table>
</div>
<div class="mini-fit">
    <div id="dataGrid" url="GetPostList" class="mini-datagrid" style="width: 100%; height: 100%;"
        idfield="ID" multiselect="true">
        <div property="columns">
            <div type="checkcolumn">
            </div>
            <div field="Code" width="100" headeralign="center" allowsort="true" align="center">
                岗位编号</div>
            <div field="Name" width="*" headeralign="center" allowsort="true" align="left">
                岗位名称</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function selectorPost() {
        var dataGrid = mini.get("dataGrid");
        var rows = dataGrid.getSelecteds();
        if (rows) closeWindow(rows);
    }   
</script>
