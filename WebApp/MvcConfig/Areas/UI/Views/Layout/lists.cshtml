@section scripts{
    <script src="@Url.Content("/MvcConfig/Scripts/layout.js")" type="text/javascript"></script>
    <script src="@Url.Content("/MvcConfig/Scripts/lists.js")" type="text/javascript"></script>
}
<div class="mini-splitter" style="width: 100%; height: 100%;" id="_splitter" vertical="true">
    <div size="51%" showcollapsebutton="true">
        <div id="tabsButtons" style="height: 28px;" class="mini-toolbar gw-grid-toolbar">
            <div id="_btn" style="float: left; padding-left: 2px;"></div>
            <div id="sysBtn" style="float: right; height: 28px; width: 300px; text-align: right; margin-right: 8px;">
                <a class="mini-button" iconcls="icon-download" onclick="ExportExcel()" id="download">导出Excel</a>
                <input id="key" class="mini-buttonedit gw-searchbox" style="width: 180px;" emptytext="请输入查询内容" onenter="keySearch" onclick="search()" />
                <a class="mini-button" id="_paraQuery" onclick="showWindow('queryWindow')" iconcls="icon-find" plain="true">参数查询</a>       
            </div>
        </div>

        <div class="mini-fit" id="divList" style="width: 100%; height: 30%;" buttons="#tabsButtons"></div>

    </div>
    <div showcollapsebutton="true">
        <div id="tabsButtons2" style="height: 28px;" class="mini-toolbar gw-grid-toolbar">
            <div id="_btn2" style="float: left; padding-left: 2px;"></div>
        </div>

        <div class="mini-fit" id="divList2" style="width: 100%; height: 30%;" buttons="#tabsButtons2"></div>

    </div>
</div>
<div id="queryWindow" class="mini-window" title="参数" style="width: 300px; min-height: 100px;"
    showmodal="true" allowresize="false" allowdrag="true">
    <div class="queryDiv">
        <form id="queryForm" method="post">
        </form>
        <div>
            <a class="mini-button" onclick="filter()" iconcls="icon-find" style="margin-right: 20px;">
                确定</a> <a class="mini-button" onclick="clearQueryForm('queryForm')" iconcls="icon-undo">
                    清空</a>
        </div>
    </div>
</div>
<script type="text/javascript">
    var LayoutDef = @Html.Raw(ViewBag.LayoutDef)  
    @Html.Raw(ViewBag.JS)
    @Html.Raw(ViewBag.EnumList);
    if (!LayoutDef.list.vertical) {
        document.getElementById("_splitter").setAttribute("vertical", "true");
    } else {
        document.getElementById("_splitter").setAttribute("vertical", "false");
    }
</script>

