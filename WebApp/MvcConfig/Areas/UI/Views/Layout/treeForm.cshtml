@section scripts{
    <script src="@Url.Content("/MvcConfig/Scripts/layout.js")" type="text/javascript"></script>
    <script src="@Url.Content("/MvcConfig/Scripts/treeForm.js")" type="text/javascript"></script>
}
<div class="mini-splitter" style="width: 100%; height: 100%;" id="splitter">
    <div size="200" showcollapsebutton="false" id="ltree">
        <div id="txtSearch">
            <input id="key" class="mini-textbox" style="width: 140px;margin-top:2px; margin-left:5px;" onenter="onKeyEnter" />
            <a class="mini-button" style="width: 40px;" plain="true" onclick="search()">查询</a>
        </div>
        <div class="mini-fit">
            <ul id="tree" class="mini-tree" style="width: 100%;">
            </ul>
        </div>
    </div>
    <div showcollapsebutton="false">
        <div style="height: 22px; text-align: right; padding-right: 10px; background-color: rgb(247, 247, 247);">
            <a class="mini-button" iconcls="icon-save" onclick="save()" id="btnSave">保存</a>
        </div>
        <table id="table1" width="100%" border="0" cellspacing="1" cellpadding="0" style="margin: 10px;">
        </table>
    </div>
</div>

<script type="text/javascript">
    var LayoutDef = @Html.Raw(ViewBag.LayoutDef)  
    @Html.Raw(ViewBag.EnumList)
    @Html.Raw(ViewBag.JS)
</script>

<style type="text/css">
    #table1 {
        border-left-color: #b9b9b9;
        border-top-color: #b9b9b9;
        border-left-width: 1px;
        border-top-width: 1px;
        border-left-style: dotted;
        border-top-style: dotted;
    }

        #table1 td {
            border-right-color: #b9b9b9;
            border-bottom-color: #b9b9b9;
            border-right-width: 1px;
            border-bottom-width: 1px;
            border-right-style: dotted;
            border-bottom-style: dotted;
        }

    .tdtitle {
        background-color: rgb(247, 247, 247);
        width: 80px;
        font-family: 'Microsoft YaHei';
        font-size: 12px;
        text-align: center;
    }
    .asLabel .mini-textbox-border,
    .asLabel .mini-textbox-input,
    .asLabel .mini-buttonedit-border,
    .asLabel .mini-buttonedit-input,
    .asLabel .mini-textboxlist-border
    {
        border:0;background:none;cursor:default;
    }
    .asLabel .mini-buttonedit-button,
    .asLabel .mini-textboxlist-close
    {
        display:none;
    }
    .asLabel .mini-textboxlist-item
    {
        padding-right:8px;
    }    

</style>
