<div class="mini-toolbar" id="btnDiv">
    <table>
        <tr>
            <td>
                <a class="mini-button" id="btnSave" plain="true" iconcls="icon-save" onclick="save();">
                    保存
                </a>
                <a class="mini-button" plain="true" iconcls="icon-cancel" onclick="closeWindow()">
                    取消
                </a>
            </td>
            <td id="btnRight"></td>
        </tr>
    </table>
</div>
<form id="dataForm" method="post">
    <input name="ID" class="mini-hidden" />
    <input name="ATYPE" class="mini-hidden" />
    <div class="basediv">
        <fieldset>
            <legend>基本信息</legend>
            <table width="100%">
                <tr style="height: 0px">
                    <td width="15%"></td>
                    <td width="85%"></td>
                </tr>
                <tr>
                    <td>
                        主题
                    </td>
                    <td>
                        <input name="SurveyName" class="mini-textbox"
                               style="width: 100%" required="true" />
                    </td>
                </tr>
                <tr>
                    <td>
                        是否记名
                    </td>
                    <td>
                        <input name="IsMemoryUser" class="mini-checkboxlist" style="width: 100%" required="true"
                               valuefield="value" textfield="text" data="TrueOrFalse" multiselect="false" />
                    </td>
                </tr>
                <tr>
                    <td>
                        调查开始时间
                    </td>
                    <td>
                        <input name="SurveyStartDate" class="mini-datepicker" required="true" style="width: 100%" allowinput="false" />
                    </td>
                </tr>
                <tr>
                    <td>
                        调查结束时间
                    </td>
                    <td>
                        <input name="SurveyEndDate" class="mini-datepicker" required="true" style="width: 100%" allowinput="false" />
                    </td>
                </tr>
                <tr>
                    <td>
                        投票人员
                    </td>
                    <td>
                        <input name="QueryUserIDs" textname="QueryUserNames" class="mini-buttonedit" style="width: 100%" />
                    </td>
                </tr>
                <tr>
                    <td>
                        投票部门
                    </td>
                    <td>
                        <input name="QueryDeptIDs" textname="QueryDeptNames" class="mini-buttonedit" style="width: 100%" />
                    </td>
                </tr>
                <tr>
                    <td>
                        统计人员
                    </td>
                    <td>
                        <input name="StatisticsUserIDs" textname="StatisticsUserNames" class="mini-buttonedit"
                               style="width: 100%" required="true" />
                    </td>
                </tr>
                <tr>
                    <td>
                        发布人
                    </td>
                    <td>
                        <input name="IssueID" textname="IssueName" class="mini-buttonedit" style="width: 100%" required="true" />
                    </td>
                </tr>
                <tr>
                    <td>
                        发布时间
                    </td>
                    <td>
                        <input name="IssueDate" class="mini-datepicker" style="width: 100%" required="true" />
                    </td>
                </tr>
                <tr>
                    <td>
                        附件
                    </td>
                    <td>
                        <span name="SurveyAttchment" class="mini-multifile" style="width: 100%"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        备注
                    </td>
                    <td>
                        <textarea class="mini-textarea" name="Remark" style="width: 100%; height: 80px;" vtype="maxLength:2000"></textarea>
                    </td>
                </tr>
            </table>
        </fieldset>
    </div>
</form>

<script language="javascript" type="text/javascript">
    @Html.GetEnum("System.TrueOrFalse")

</script>
<script language="javascript" type="text/javascript">
    addMultiUserSelector("QueryUserIDs");
    addMultiUserSelector("StatisticsUserIDs");
    addSingleUserSelector("IssueID");
    addMultiOrgSelector("QueryDeptIDs");
</script>
