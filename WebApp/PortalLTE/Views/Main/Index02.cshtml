    <script type="text/javascript">
        function dashboardChanged() {
            var LeftDashboard = "";
            $("#LeftDashboard").find(".box").each(function (index, ele) {
                if (!$(ele).data("hidden"))
                    LeftDashboard += "," + ele.id;
            });
            if (LeftDashboard.length > 1)
                LeftDashboard = LeftDashboard.substr(1);

            var RightDashboard = "";
            $("#RightDashboard").find(".box").each(function (index, ele) {
                if (!$(ele).data("hidden"))
                    RightDashboard += "," + ele.id;
            });
            if (RightDashboard.length > 1)
                RightDashboard = RightDashboard.substr(1);

            var MiddleDashboard = "";
            $("#MiddleDashboard").find(".box").each(function (index, ele) {
                if (!$(ele).data("hidden"))
                    MiddleDashboard += "," + ele.id;
            });
            if (MiddleDashboard.length > 1)
                MiddleDashboard = MiddleDashboard.substr(1);

            var settings = {};
            settings.LeftDashboard = LeftDashboard;
            settings.RightDashboard = RightDashboard;
            settings.MiddleDashboard = MiddleDashboard;

            $.ajax({
                url: "SaveSettings",
                data: { settings: mini.encode(settings) },
                type: "post",
                dataType: "json",
                success: function (text) {

                },
                error: function (xhr, textStatus, errorThrown) {
                    alert(xhr.responseText);
                }
            });
        }

        //iframe跳转
        function goUrl(e) {
            var url = $(e).attr("ui-href");
            var curli;
            var tablis = $("#custab").find("li");
            //判断是否在tab页中打开
            var hasTab = tablis.filter(function () {
                return $(this).data("custaburl") === url;
            });

            if (hasTab.length === 0) {
                var title = $(e).html();
                var className = "";
                var length = tablis.length;
                if (length === 0) {
                    $("#page-mark").hide();
                    className = "class='active'";
                } else {
                    $("#page-mark").show();
                }

                $("#custab").append('<li ' + className + ' onclick=showCurTab(this)  data-custaburl=' + url + '>' + title + '<i class="fa fa-remove" onclick="closeCustomTab(this,event)"></i></li>');
                $("#custab-content").append('<li ' + className + '><iframe src="http://' + window.location.host + url + '"></iframe></li>');

                curli = $("#custab").find("li").last();
                $("#mainView").hide();
                $("#iframe").show();
            } else {
                curli = hasTab[0];
            }
            //显示当前页
            showCurTab(curli);
        }

        //重置布局配置
        function resetSetting(e) {
            if ($(e).prop("checked") == true) {
                $.ajax({
                    url: "SaveSettings",
                    data: { settings: "" },
                    type: "post",
                    dataType: "json",
                    success: function (text) {
                        window.location.reload();
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        alert(xhr.responseText);
                    }
                });
            }
        }

        //返回首页
        function gohome() {
            $("#mainView").show();
            $("#iframe").hide();
        }

        //关闭自定义Tab栏
        function closeCustomTab(cur, e) {
            e.preventDefault();
            e.stopPropagation();
            var curTab = $(cur).parent();
            var index = curTab.index();
            curTab.remove();
            $("#custab-content").find("li:eq(" + index + ")").remove();
            if (curTab.hasClass("active")) {
                $("#custab").find("li:eq(0)").addClass("active");
                $("#custab-content").find("li:eq(0)").addClass("active");
            }
            var length = $("#custab").find("li").length;
            if (length <= 1) {
                $("#page-mark").hide();
            }
            if (length === 0) {
                $("#mainView").show();
                $("#iframe").hide();
            }
        };

        //显示当期Tab
        function showCurTab(e, dom) {
            dom = $(e) || dom;
            dom.addClass("active");
            dom.siblings("li").removeClass("active");
            var index = dom.index();
            var choTab = $("#custab-content").find("li:eq(" + index + ")");
            choTab.addClass("active");
            choTab.siblings("li").removeClass("active");
        }

        $(".box").show();
