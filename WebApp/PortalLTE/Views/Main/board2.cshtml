<div class="box box-solid" id="{|ID|}" style="height:340px;">
    <div class="box-header with-border" v-if="{|IsOldPortal|}">
        <h3 class="box-title">
            {|Title|}</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" title="查看更多" data-widget="ellipsis" onclick="morePicNews();">
                <i class="fa fa-ellipsis-v"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" onclick="$('#{|ID|}').data('hidden', 'true');dashboardChanged('{|ID|}');">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body box-header" style="height:100%;">
        <iframe id="_iframe" name="iframe" class="iframe-pic-news" src='/PortalLTE/PublicInfo/PicNews.aspx' width='100%' height='340px' marginwidth='0' marginheight='0' hspace='0' vspace='0' frameborder='0' scrolling='no'></iframe>
    </div>
    <!-- /.box-body -->
    <div class="userinfo_close close-box" data-widget="remove" onclick="$('#{|ID|}').data('hidden', 'true');dashboardChanged('{|ID|}');"></div>
</div>

<script>
    var picNewsList = new Vue({
        el: '#{|ID|}',
        data: {
            list: []
        },
        methods: {

        }
    });
    function morePicNews() {
        var url = "/Base/PortalBlock/NewsImage/Gallerys";
        var opts = {
            url: url,
            title: "图片",
            width: "80%",
            height: "80%",
            showMaxButton: true,
            ondestroy: function (action) {

            }
        };
        if (NoPopupLayer && NoPopupLayer != "true") 
            mini.open(opts);
        else
            window.open(url);
    }
    $("#{|ID|}").mouseover(function () {
        if (getCache('isLockPortal') == 'false' || window.location.href.indexOf('/Base/UI/Portal/Portal') > 0)
            $("#{|ID|} .userinfo_close").show();
    });
    $("#{|ID|}").mouseout(function () {
        $("#{|ID|} .userinfo_close").hide();
    });
    if(typeof (IsUseNewPortal) != 'undefined' && IsUseNewPortal.toLowerCase() == "true")
        $("#_iframe").css("height",'340px');
</script>
