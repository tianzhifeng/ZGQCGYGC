@{
    ViewBag.Title = "岗位角色编辑";
}
<div id="formlayout" class="mini-layout" style="width: 100%; height: 100%;">
    <div title="north" region="north" height="36" showspliticon="false" showheader="false" allowresize="false"
         splitsize="0" style="border: 0;">
        <div class="mini-toolbar" id="btnDiv">
            <table>
                <tr>
                    <td>
                        <a class="mini-button" plain="true" iconcls="icon-save" onclick="save();">保存</a>
                        <a class="mini-button" plain="true" iconcls="icon-cancel" onclick="closeWindow()">取消</a>
                    </td>
                    <td id="btnRight">
                        <a class="mini-button" onclick="showHelp()" iconcls="icon-help" plain="true">帮助</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div title="center" region="center" style="border: 0;">
        <form id="dataForm" method="post">
            <input name="ID" class="mini-hidden" />
            <input name="State" class="mini-hidden" />
            <div class="formDiv">
                <fieldset>
                    <legend>基本信息</legend>
                    <div>
                        <table>
                            <tr class="hideRow">
                                <td width="15%"></td>
                                <td width="35%"></td>
                                <td width="15%"></td>
                                <td width="35%"></td>
                            </tr>
                            <tr>
                                <td>岗位名称</td>
                                <td style="padding-right:40px;">
                                    <input name="RoleName" style="width: 100%" class="mini-textbox" required="true" vtype="maxLength:50" />

                                </td>
                                <td>岗位编号</td>
                                <td style="padding-right:40px;">
                                    <input name="RoleCode" style="width: 100%" class="mini-textbox" required="true" vtype="maxLength:50" />
                                </td>
                            </tr>
                            <tr style="display:none">
                                <td>岗位类别</td>
                                <td style="padding-right:40px;">
                                    <input name="RoleType" class="mini-combobox" required="true" style="width: 100%;" textfield="text" valuefield="value"
                                           data="RoleType" allowinput="false" />
                                </td>
                            </tr>
                            <tr>
                                <td>序号</td>
                                <td style="padding-right:40px;"><input name="SortIndex" style="width: 100%" class="mini-textbox" required="true" vtype="datatype:float" /></td>
                            </tr>
                            <tr>
                                <td>
                                    描述
                                </td>
                                <td style="padding-right:40px;" colspan="3">
                                    <input name="Description" class="mini-textarea" style="width: 100%; height: 200px;" vtype="maxLength:100" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </fieldset>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    @Html.GetEnum(typeof(Project.Logic.ProjectRole));
    @Html.GetEnum(typeof(Project.Logic.RoleType));
</script>
