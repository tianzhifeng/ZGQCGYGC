@{
    ViewBag.Title = "Edit";
}
<div id="formlayout" class="mini-layout" style="width: 100%; height: 100%;">
    <div region="north" height="36" showspliticon="false" showheader="false" allowresize="false"
         splitsize="0" style="border: 0;">
        <div class="mini-toolbar" id="btnDiv">
            <table style="width: 100%;">
                <tr>
                    <td style="width: 100%;">
                        <a class="mini-button" iconcls="icon-save" onclick="save();" plain="true">保存</a>
                        <a class="mini-button" iconcls="icon-cancel" onclick="closeWindow()" plain="true">取消</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div title="center" region="center" style="border: 0;">
        <div id="dataForm">
            <input name="ID" class="mini-hidden" />
            <input name="ModeID" class="mini-hidden" />
            <div style="padding-left: 20px; padding-top: 10px;">
                <table width="100%" border="0" cellpadding="0" cellspacing="2">
                    <tr>
                        <td>
                            模板名称
                        </td>
                        <td colspan="3" style="padding-right: 40px;">
                            <input name="Name" style="width: 100%" class="mini-textbox" required="true" vtype="maxLength:500" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            模板编号
                        </td>
                        <td colspan="3" style="padding-right: 40px;">
                            <input name="Code" style="width: 100%" class="mini-textbox" vtype="maxLength:500" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            应用模式
                        </td>
                        <td colspan="3" style="padding-right: 40px;">
                            <input name="ModeCodes" textname="ModeNames" required="true" class="mini-combobox" style="width: 100%;" textfield="text"
                                   valuefield="value" data="ProjectMode" allowinput="false" multiselect="true" />
                        </td>
                    </tr>
                    <tr>
                        <td width="15%"></td>
                        <td width="35%;" style="padding-right: 40px;"></td>
                        <td width="15%"></td>
                        <td width="35%;" style="padding-right: 40px;"></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    @Html.GetEnum("Project.ProjectMode ");
</script>
