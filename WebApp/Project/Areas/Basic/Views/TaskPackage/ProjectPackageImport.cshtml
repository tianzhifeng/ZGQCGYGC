@{
    ViewBag.Title = "ProjectPackageImport";
}
<div class="mini-toolbar" style="padding: 0px; border-top: 0; border-left: 0; border-right: 0;">
    <table style="width: 100%;">
        <tr>
            <td style="width: 100%;">
                <a class="mini-button" iconcls="icon-add" onclick="returnValue;" plain="true">导入</a>
            </td>
            <td style="white-space: nowrap;">
                <input id="projectkey" class="mini-buttonedit gw-searchbox" emptytext="请输入项目名称或项目编号" onenter="quickSearch('Name,Code',{gridId:'mygrid',queryBoxId:'projectkey'});"
                    onbuttonclick="quickSearch('Name,Code',{gridId:'mygrid',queryBoxId:'projectkey'});" />
            </td>
        </tr>
    </table>
</div>
<div class="mini-fit">
    <div id="subLayout" class="mini-layout" style="width: 100%; height: 100%;" splitsize="3">
        <div title="west" region="west" showheader="false" width="650" expanded="true" showspliticon="false"
            style="border-top: 0; border-left: 0; border-bottom: 0;">
            <div class="mini-fit">
                <div id="mygrid" url="GetProjectList" class="mini-datagrid" style="width: 100%; height: 100%;" idfield="ID"
                    multiselect="false" borderstyle="border:0" pagesize="10" onselectionchanged="onRowSelectChanged">
                    <div property="columns">
                        <div type="indexcolumn">
                        </div>
                        <div field="Name" width="*" headeralign="center" allowsort="true">
                            项目名称</div>
                        <div field="Code" width="120" headeralign="center" allowsort="true" align="center">
                            项目编号</div>
                    </div>
                </div>
            </div>
        </div>
        <div title="center" region="center" style="border-top: 0; border-right: 0; border-bottom: 0;">
            <ul id="mytree" class="mini-tree" style="width: 100%; height: 100%;" showtreeicon="true" textfield="Name"
                idfield="ID" iconfield="WBSType" enablehottrack="false" parentfield="ParentID" resultastree="false"
                expandonload="3" showcheckbox="true" checkrecursive="true">
            </ul>
        </div>
    </div>
</div>
<script type="text/javascript">
    var majorCode = getQueryString("SpaceCode");
    function onRowSelectChanged(e) {
        if (e.selected) {
            var url = "GetTree?ProjectInfoID=" + e.selected.ID + "&MajorValue=" + majorCode;
            mini.get("mytree").load(url);
        }
    }

    function returnValue() {

    }
</script>
