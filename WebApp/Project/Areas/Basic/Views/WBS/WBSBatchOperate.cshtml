@{
    ViewBag.Title = "WBSBatchOperate";
}
<div id="mainlayout" class="mini-layout" style="width: 100%; height: 100%;">
    <div title="west" region="west" width="500" expanded="false" showspliticon="true">
        <div class="mini-toolbar" style="padding: 0px; border-top: 0; border-left: 0; border-right: 0;">
            <table style="width: 100%;">
                <tr>
                    <td style="width: 100%;">
                        <a class="mini-button" id="btnAdd" iconcls="icon-add" onclick="addRow" plain="true">增加</a>
                    </td>
                    <td style="white-space: nowrap;">
                    </td>
                </tr>
            </table>
        </div>
        <div class="mini-fit">
            <div id="dataGrid" url="" class="mini-datagrid" style="width: 100%; height: 100%;" idfield="ID" multiselect="true"
                allowcelledit="true" allowcellselect="true" editnextonenterkey="true" editnextrowcell="true" borderstyle="border:0;">
                <div property="columns">
                    <div type="checkcolumn">
                    </div>
                    <div name="function" field="delete" width="60" headeralign="center" align="center" allowsort="false">
                        删除</div>
                    <div field="Name" width="*" headeralign="center" allowsort="false">
                        名称<input property="editor" class="mini-textbox" required="true" style="width: 100%;" /></div>
                    <div field="Code" width="100" headeralign="center" allowsort="false" align="center">
                        编号<input property="editor" class="mini-textbox" style="width: 100%;" /></div>
                    <div field="ChargeUserID" displayfield="ChargeUserName" width="100" headeralign="center" allowsort="false"
                        align="center">
                        负责人
                        <input property="editor" class="mini-autocomplete" valuefield="ID" textfield="Name" style="width: 100%;"
                            url="/MvcConfig/Auth/User/SelectUsers" /></div>
                    <div field="PlanStartDate" headeralign="center" dateformat="yyyy-MM-dd" width="100" allowsort="false"
                        align="center">
                        计划开始<input property="editor" class="mini-datepicker" style="width: 100%;" /></div>
                    <div field="PlanEndDate" width="100" headeralign="center" dateformat="yyyy-MM-dd" allowsort="false" align="center">
                        计划结束<input property="editor" class="mini-datepicker" style="width: 100%;" /></div>
                </div>
            </div>
        </div>
    </div>
    <div title="center" region="center">
    </div>
</div>
<script type="text/javascript">
    addGridButton("dataGrid", "delete", { actionTitle: "删除", onButtonClick: function (row, settings, sender) {
        delRow(row);
    }
    });

    function addRow() {
        var grid = mini.get("dataGrid");
        var newRow = { WBSType: wbsType };
        var index = grid.getData().length;
        grid.addRow(newRow, index);
    }
</script>
