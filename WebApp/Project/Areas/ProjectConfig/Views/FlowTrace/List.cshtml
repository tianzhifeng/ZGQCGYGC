@{
    ViewBag.Title = "List";
}

<div id="mainLayout" class="mini-layout" style="width: 100%; height: 100%;">
    <div title="结构定义" showheader="false" region="west" width="300" expanded="true" showspliticon="true">
        <div class="mini-toolbar" style="padding: 0px; border-bottom: 0;">
            <table style="width: 100%;">
                <tr>
                    <td style="width: 100%;">
                        <a class="mini-button" iconcls="icon-add" onclick="addRoot();" plain="true">增加根节点</a>
                        <a class="mini-button" iconcls="icon-add" onclick="addTreeNode();" plain="true">增加</a>
                        <a class="mini-button" iconcls="icon-remove" onclick="delNode();" plain="true">删除</a>
                    </td>
                    <td style="white-space: nowrap;"></td>
                </tr>
            </table>
        </div>
        <div class="mini-fit">
            <ul id="dataTree" url="GetTree" class="mini-tree" style="width: 100%; height: 100%;" showtreeicon="true" textfield="Name" idfield="ID"
                enablehottrack="false" parentfield="ParentID" resultastree="false" expandonload="0" onnodeselect="onNodeSelect"></ul>
        </div>
    </div>
    <div title="center" region="center">
        <div id="formToolBar" class="mini-toolbar" style="padding: 0px; border-left: 0; border-top: 0; border-right: 0;">
            <table style="width: 100%;">
                <tr>
                    <td style="width: 100%;">
                        <a class="mini-button" iconcls="icon-save" onclick="saveData();" plain="true">保存</a>
                    </td>
                </tr>
            </table>
        </div>
        <div id="dataForm">
            <input name="ID" class="mini-hidden" />
            <input name="ModeID" class="mini-hidden" />
            <input name="ParentID" class="mini-hidden" />
            <div style="padding-left: 20px; padding-top: 10px;">
                <fieldset>
                    <legend>基本信息</legend>
                    <table width="100%" border="0" cellpadding="0" cellspacing="2">
                        <tr>
                            <td width="15%">名称</td>
                            <td width="35%;" style="padding-right: 40px;">
                                <input name="Name" style="width: 100%" class="mini-textbox" required="true" vtype="maxLength:50" />

                            </td>
                            <td width="15%">类型</td>
                            <td width="35%;" style="padding-right: 40px;">
                                <input name="Type" class="mini-combobox" style="width: 100%;" textfield="text" valuefield="value" required="true"
                                       data="FlowTraceDefineNodeType" allowinput="false" onvaluechanged="OnTypeSelectChanged" />
                            </td>
                        </tr>
                        <tr>
                            <td>排序号</td>
                            <td style="padding-right:40px;">
                                <input name="SortIndex" style="width: 100%" class="mini-textbox" required="true" vtype="int" />
                            </td>
                            <td></td>
                            <td style="padding-right:40px;"></td>
                        </tr>
                    </table>
                </fieldset>
                <fieldset id="configArea">
                    <legend>配置信息</legend>
                    <table width="100%" border="0" cellpadding="0" cellspacing="2">
                        <tr>
                            <td width="15%">相关数据库</td>
                            <td width="35%;" style="padding-right: 40px;">
                                <input name="ConnName" class="mini-combobox" style="width: 100%;" textfield="text" valuefield="value" required="true"
                                       data="ConnEnum" allowinput="false" value="Project"  enabled="false"/>
                            </td>
                            <td width="15%">相关数据表</td>
                            <td width="35%;" style="padding-right: 40px;">
                                <input name="TableName" style="width: 100%" class="mini-textbox" vtype="maxLength:50" required="true" />
                            </td>
                        </tr>
                        <tr>
                            <td>名称列解释表达式</td>
                            <td colspan="3" style="padding-right: 40px;">
                                <input name="NameFieldInfo" style="width: 100%" class="mini-textbox" vtype="maxLength:500" />
                            </td>
                        </tr>
                        <tr>
                            <td>表单链接URL</td>
                            <td colspan="3" style="padding-right: 40px;">
                                <input name="LinkFormUrl" style="width: 100%" class="mini-textbox" vtype="maxLength:500" />
                            </td>
                        </tr>

                    </table>
                </fieldset>
                <fieldset id="enumArea">
                    <legend>枚举信息</legend>
                    <table width="100%" border="0" cellpadding="0" cellspacing="2">
                        <tr>
                            <td width="15%"></td>
                            <td width="35%;" style="padding-right: 40px;"></td>
                            <td width="15%"></td>
                            <td width="35%;" style="padding-right: 40px;"></td>
                        </tr>
                        <tr>
                            <td colspan="4" style="padding-right: 40px;">
                                <div class="mini-toolbar" style="padding: 0px; border-bottom: 0;">
                                    <table style="width: 100%;">
                                        <tr>
                                            <td style="width: 100%;">
                                                <a class="mini-button" iconcls="icon-add" onclick="addRow();" plain="true">增加</a>
                                                <a class="mini-button" iconcls="icon-remove" onclick="removeRow();" plain="true">删除</a>
                                            </td>
                                            <td style="white-space: nowrap;"></td>
                                        </tr>
                                    </table>
                                </div>
                                <div id="EnumFieldInfo" class="mini-datagrid" style="width: 100%; height: 200px;" idfield="ID" multiselect="true"
                                     allowcelledit="true" allowcellselect="true"
                                     editnextonenterkey="true" editnextrowcell="true"
                                     showpager="false">
                                    <div property="columns">
                                        <div type="checkcolumn">
                                        </div>
                                        <div field="FieldName" width="200" headeralign="center">
                                            字段<input property="editor" class="mini-textbox" style="width:100%;" />
                                        </div>
                                        <div field="EnumKey" width="200" headeralign="center">
                                            枚举Key<input property="editor" class="mini-textbox" style="width:100%;" />
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                </fieldset>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    @Html.GetEnum(typeof(Project.Logic.FlowTraceDefineNodeType))
    @Html.GetEnum(typeof(Config.ConnEnum))
</script>
<script type="text/javascript">
    var modeID = getQueryString("ModeID");
    var url = "GetTree?ModeID=" + modeID;
    $("#dataTree").attr("url", url);
    $("#formToolBar").hide();
    function addRoot() {
        var url = "Edit?ModeID=" + modeID;
        openWindow(url, {
            refresh: false, title: "编辑", width: "60%", height: "60%", addQueryString: false,
            onDestroy: function (data) {
                if (data == "close") return;
                mini.get("dataTree").reload();
            }
        });
    }

    function onNodeSelect(e) {
        var form = new mini.Form("dataForm");
        form.setData(e.node);
        var dataGrid = mini.get("EnumFieldInfo");
        dataGrid.setData(mini.decode(e.node.EnumFieldInfo));
        $("#formToolBar").show();
    }

    function saveData() {
        save({
            onComplete: function (data) {
                var dataTree = mini.get("dataTree");
                var node = dataTree.getSelectedNode();
                dataTree.updateNode(node, data);
            }
        });
    }

    function addTreeNode() {
        var dataTree = mini.get("dataTree");
        var node = dataTree.getSelectedNode();
        if (node.Type == "FlowNode") { msgUI("流程节点下不能增加子节点"); return; }
        var url = "Edit?ModeID=" + modeID;
        if (!node) { msgUI("请选择一个节点"); return; }
        if (node) {
            url += "&ParentID=" + node.ID;
        }
        openWindow(url, {
            refresh: false, title: "编辑", width: "60%", height: "60%", addQueryString: false,
            onDestroy: function (data) {
                if (data == "close") return;
                mini.get("dataTree").reload();
            }
        });
    }

    function delNode() {
        var dataTree = mini.get("dataTree");
        var node = dataTree.getSelectedNode();
        if (!node) { msgUI("请选择一个节点"); return; }
        msgUI("确定要删除吗？", 2, function (result) {
            if (result != "ok") { return; }
            addExecuteParam("ListIDs", node.ID);
            execute("Delete", {
                showLoading: true, refresh: false, onComplete: function (data) {
                    dataTree.reload();
                }, validateForm: false
            });
        });
    }

    function addRow() {
        var dataGrid = mini.get("EnumFieldInfo");
        var newRow = {};
        dataGrid.addRow(newRow, 0);
    }

    function removeRow() {
        var dataGrid = mini.get("EnumFieldInfo");
        var rows = dataGrid.getSelecteds();
        dataGrid.removeRows(rows);
    }

</script>

<style type="text/css">
    .mini-layout-region-body {
        overflow-y: hidden;
    }
</style>