@{
    ViewBag.Title = "Edit";
}
<div id="formlayout" class="mini-layout" style="width: 100%; height: 100%;">
    <div region="north" height="32" showspliticon="false" showheader="false" allowresize="false"
        splitsize="0" style="border: 0;">
        <div class="mini-toolbar" style="padding: 0px; border-left: 0; border-top: 0; border-right: 0;">
            <table style="width: 100%;">
                <tr>
                    <td style="width: 100%;">
                        <a class="mini-button" iconcls="icon-save" onclick="save();" plain="true">保存</a>
                        <a class="mini-button" iconcls="icon-cancel" onclick="closeWindow()" plain="true">取消</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div title="center" region="center" style="border: 0;">
        <div id="dataForm">
            <input name="ID" class="mini-hidden" />
            <input name="ModeID" class="mini-hidden" />
            <input name="ParentID" class="mini-hidden" />
            <div style="padding-left: 20px; padding-top: 10px;">
                <fieldset>
                    <legend>基本信息</legend>
                    <table width="100%" border="0" cellpadding="0" cellspacing="2">
                        <tr>
                            <td width="15%">
                                名称
                            </td>
                            <td width="35%;" style="padding-right: 40px;">
                                <input name="Name" style="width: 100%" class="mini-textbox" required="true" vtype="maxLength:50" />
                            </td>
                            <td width="15%">
                                节点类型
                            </td>
                            <td width="35%;" style="padding-right: 40px;">
                                <input name="NodeType" class="mini-combobox" style="width: 100%;" textfield="text"
                                    valuefield="value" required="true" data="QBSNodeType" allowinput="false" onvaluechanged="OnTypeSelectChanged" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                排序号
                            </td>
                            <td style="padding-right: 40px;">
                                <input name="SortIndex" style="width: 100%" class="mini-textbox" required="true"
                                    vtype="int" />
                            </td>
                            <td>
                            </td>
                            <td style="padding-right: 40px;">
                            </td>
                        </tr>
                    </table>
                </fieldset>
                <fieldset id="configArea">
                    <legend>配置信息</legend>
                    <table width="100%" border="0" cellpadding="0" cellspacing="2">
                        <tr>
                            <td width="15%">
                                相关数据库
                            </td>
                            <td width="35%;" style="padding-right: 40px;">
                                <input name="ConnName" class="mini-combobox" style="width: 100%;" textfield="text"
                                    valuefield="value" required="true" data="ConnEnum" allowinput="false" />
                            </td>
                            <td>
                                QBS类型
                            </td>
                            <td width="35%;" style="padding-right: 40px;">
                                <input name="QBSType" class="mini-combobox" style="width: 100%;" textfield="text"
                                    valuefield="value" required="true" data="QBSType" allowinput="false" />
                            </td>
                        </tr>
                        <tr>
                            <td width="15%">
                                数据单位
                            </td>
                            <td width="35%;" style="padding-right: 40px;">
                                <input name="DataUnit" style="width: 100%" class="mini-textbox" vtype="maxLength:20" />
                            </td>
                            <td>
                            </td>
                            <td>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                SQL
                            </td>
                            <td colspan="3" style="padding-right: 40px;">
                                <input name="SQL" class="mini-textarea" style="width: 100%; height: 150px;" vtype="maxLength:500" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                表单链接URL
                            </td>
                            <td colspan="3" style="padding-right: 40px;">
                                <input name="LinkUrl" style="width: 100%" class="mini-textbox" vtype="maxLength:500" />
                            </td>
                        </tr>
                    </table>
                </fieldset>
                <div style="color: Red;">
                    *QBS定性类型SQL显示日期字段为：CreateDate</div>
                <div style="color: Red;">
                    *QBS定量类型SQL显示值字段为：TotalNum</div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    @Html.GetEnum(typeof(Project.Logic.QBSNodeType))
    @Html.GetEnum(typeof(Project.Logic.QBSType))
    @Html.GetEnum(typeof(Config.ConnEnum))
</script>
<script type="text/javascript">

    function onFormSetData(data) {
        if (data.NodeType == "Catagory") {
            $("#configArea").hide();
        }
        else {
            $("#configArea").show();
        }
        setFormItemDisabled("NodeType");
    }

    function OnTypeSelectChanged(e) {
        if (e.value == "Catagory") {
            $("#configArea").hide();
        }
        else {
            $("#configArea").hide();
        }
    }

</script>
